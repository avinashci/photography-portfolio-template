{
  "sitemap": false,
  "defaults": {
    "timeout": 30000,
    "wait": 5000,
    "chromeLaunchConfig": {
      "ignoreHTTPSErrors": true,
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--disable-web-security",
        "--disable-features=TranslateUI",
        "--disable-ipc-flooding-protection",
        "--disable-backgrounding-occluded-windows",
        "--disable-renderer-backgrounding"
      ]
    },
    "standard": "WCAG2AA",
    "level": "error",
    "reporters": [
      "cli",
      ["json", { "fileName": "reports/accessibility/pa11y-results.json" }]
    ],
    "ignore": [
      "notice"
    ],
    "actions": [
      "wait for element body to be visible"
    ]
  },
  "urls": [
    {
      "url": "http://localhost:3002/en",
      "name": "Homepage (English)"
    },
    {
      "url": "http://localhost:3002/en/about",
      "name": "About Page (English)",
      "timeout": 45000
    },
    {
      "url": "http://localhost:3002/en/galleries",
      "name": "Galleries Page (English)",
      "timeout": 60000,
      "wait": 10000
    },
    {
      "url": "http://localhost:3002/en/journal",
      "name": "Journal Page (English)",
      "timeout": 45000
    },
    {
      "url": "http://localhost:3002/ta",
      "name": "Homepage (Tamil)",
      "timeout": 45000
    }
  ]
}