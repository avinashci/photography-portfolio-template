{
  "name": "photography-portfolio",
  "version": "2.0.0",
  "description": "Professional Photography Portfolio with Payload CMS 3.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "build:check": "node scripts/deploy-check.js",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:turbo": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbo",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "start:prod": "cross-env NODE_ENV=production npm run start",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "lint:strict": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "echo 'No tests configured yet'",
    "test:e2e": "echo 'E2E tests not configured yet'",
    "test:a11y": "playwright test tests/accessibility.test.cjs --config=playwright.a11y.config.cjs",
    "test:a11y:fast": "playwright test tests/accessibility.test.cjs --config=playwright.a11y.config.cjs --project=chromium",
    "test:a11y:pa11y": "pa11y-ci --config .pa11yci.optimized.json",
    "test:a11y:pa11y:basic": "pa11y-ci",
    "audit:accessibility": "npm run test:a11y:pa11y",
    "audit:a11y:full": "npm run test:a11y && npm run test:a11y:pa11y",
    "audit:a11y:quick": "npm run test:a11y:fast && npm run test:a11y:pa11y:basic",
    "audit:lighthouse": "lhci autorun",
    "reports:clean": "rm -rf reports/* && mkdir -p reports/{accessibility,lighthouse,playwright,pa11y}",
    "reports:open": "open reports/accessibility/ || explorer reports/accessibility/ || ls -la reports/accessibility/",
    "precommit": "npm run lint && npm run type-check",
    "predeploy": "npm run build:check",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "deploy:check": "node scripts/deploy-check.js",
    "deploy:build": "npm run deploy:check && npm run build",
    "db:seed": "node scripts/seed-data.js",
    "db:migrate": "cross-env NODE_OPTIONS=--no-deprecation payload migrate",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "import:photography": "node import-photography-data-simple.js",
    "validate:template": "node scripts/validate-template-config.js"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "3.52.0",
    "@payloadcms/next": "3.52.0",
    "@payloadcms/plugin-seo": "3.52.0",
    "@payloadcms/richtext-lexical": "3.52.0",
    "@payloadcms/ui": "3.52.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "cross-env": "^7.0.3",
    "date-fns": "4.1.0",
    "dotenv": "^16.6.1",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.456.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.1",
    "next": "^15.4.6",
    "next-intl": "^4.3.4",
    "next-themes": "^0.4.6",
    "payload": "3.52.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^4.1.12",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.55.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.4.6",
    "jest-axe": "^10.0.0",
    "pa11y": "^9.0.0",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.5.0",
    "puppeteer": "^24.18.0",
    "tsx": "^4.20.4",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}